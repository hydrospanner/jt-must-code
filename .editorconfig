# EditorConfig https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 80

[*.{html,js,css,scss}]
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[COMMIT_EDITMSG]
max_line_length = 0

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore
